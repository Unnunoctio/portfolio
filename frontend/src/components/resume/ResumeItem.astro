---
import EducationIcon from '@/components/icons/EducationIcon.astro';
import FileIcon from '@/components/icons/FileIcon.astro';
import WorkIcon from '@/components/icons/WorkIcon.astro';
import type { Experience } from '@/types';

interface Props extends Experience {
  isEnd: boolean;
}

const { code, title, company, startDate: start, endDate: end, description, certificateFile, certificateUrl, isEnd = false } = Astro.props;


const startDate = new Date(start);
let date = `${startDate.getFullYear()}`
if (end === null) date = `${date} - Presente`;
else {
  const endDate = new Date(end);
  if (endDate.getFullYear() !== startDate.getFullYear()) date = `${date} - ${endDate.getFullYear()}`;
}
---

<li class="flex flex-row gap-x-3 max-w-[500px]">
  <div class="flex flex-col items-center w-fit">
    <span class="p-2 border border-border-primary rounded-full">
      {code === "education" && <EducationIcon className="w-6 h-6 fill-transparent stroke-text-secondary" />}
      {code === "work" && <WorkIcon className="w-6 h-6 fill-transparent stroke-text-secondary" />}
    </span>
    <span class={`h-full w-px ${isEnd ? "bg-gradient-to-b from-border-primary" : "bg-border-primary"}`} />
  </div>
  <div class="flex flex-col pb-6">
    <span class="py-1 w-fit">
      <span class="py-1 px-4 border border-border-primary rounded-full">{date}</span>
    </span>
    <div class="flex justify-between items-center gap-2 pr-4">
      <div>
        <h3 class="text-xl font-medium">{title}</h3>
        <span class="text-md italic text-text-tertiary">{company}</span>
      </div>
      
      <!-- Certificado -->
      {certificateFile !== null &&
        <a href={certificateFile} aria-label="certificate" target="_blank" rel="noreferrer" class="group flex pointer p-2.5 rounded-full">
          <FileIcon className="w-7 h-7 fill-transparent stroke-text-secondary transition-colors group-hover:stroke-text-hover" />
        </a>
      }
      {certificateUrl !== null &&
        <a href={certificateUrl} aria-label="certificate" target="_blank" rel="noreferrer" class="group flex pointer p-2.5 rounded-full">
          <FileIcon className="w-7 h-7 fill-transparent stroke-text-secondary transition-colors group-hover:stroke-text-hover" />
        </a>
      }
    </div>
    {description !== null &&
      <p class="mt-2 text-md text-balance text-text-secondary">{description}</p>
    }
  </div>
</li>