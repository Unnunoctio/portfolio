---
import SkillBadge from "@/components/skills/SkillBadge.astro";
import type { Technology } from "@/types";

interface Props {
  skills: Technology[];
}

const { skills } = Astro.props;
---

<ul class="flex flex-wrap gap-3 mt-4">
  {skills.length > 0 && skills.map((skill) => <SkillBadge {...skill} />)}

  {skills.length === 0 && <SkillBadge name="Sin Habilidades" color="#8b5cf6" />}
</ul>
