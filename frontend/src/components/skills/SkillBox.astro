---
import SkillList from '@/components/skills/SkillList.astro';
import type { Technology } from '@/types';

interface Props {
  title: string;
  skills: Technology[];
  style?: string;
}

const { title, skills, style } = Astro.props;
---

<section class={`p-3 w-full max-w-[520px] bg-bg-tertiary rounded-2xl shadow-primary ${style}`}>
  <h3 class="text-2xl">{title}</h3>
  <SkillList skills={skills} />
</section>