---
interface Props {
  name: string;
  color: string;
}

const { name, color } = Astro.props;
---

<li>
  <span
    class="block items-center px-2 py-1 text-xs rounded-full ring-1 ring-inset"
    style={{
      "background-color": `${color}33`,
      "--tw-ring-color": color,
    }}
  >
    {name}
  </span>
</li>
